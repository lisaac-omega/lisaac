Header
  + name := MAIN;
 
Public
  - main <-
  ( + r:RANDOM
    + x,cm1,c0,c1:INTEGER
    r := new RANDOM.init 3
    TEST.check (r.min 3 max 4) integer 4
    TEST.check (r.min 0 max 1 = 0)
    TEST.check (r.min (-1) max (0) = -1)
    1000.times {
      x := r.min (-1) max 1
      (x = -1).if {
        cm1 := cm1 + 1
      }.elseif {x = 0} then {
        c0 := c0 + 1
      } else {
        TEST.check x integer 1
        c1 := c1 + 1
      }
    }
    TEST.check cm1 integer 315
    TEST.check c0 integer 329
    TEST.check c1 integer 356
    // Not so bad !
  )
  
