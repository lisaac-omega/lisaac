Header
  + name := MAIN;
  
Public
  - main <-
  ( + stridx:STRIDX
    + counter:INTEGER
    + ustring:USTRING
    + ustring_buffer:USTRING_BUFFER
    + char_32:CHAR
    ustring_buffer := "Toto fait du vÃ©lo!"
    ustring := ustring_buffer
    char_32 := CHAR.from_alias "o"
    stridx := ustring.index_of char_32
    OUT # "1 - stridx=" # stridx # '\n'
    {ustring.valid_index stridx}.while_do {
      OUT # "2 - stridx=" # stridx # '\n'
      counter := counter + 1
      stridx := stridx + 1
      OUT # "3 - stridx=" # stridx # '\n'
      stridx := ustring.index_of char_32 start stridx
      TEST.check (counter <= 3)
    }
    OUT # "4 - stridx=" # stridx # '\n'
    TEST.check counter integer 3
  )
  
  
