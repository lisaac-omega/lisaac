  - draw_logo (x,y:REAL_32) size (w,h:REAL_32) time t:REAL_32 <-
  ( + p,pf:PAINT
    + s,cs,sn:REAL_32
    /*
    + w,h,xx,yy:INTEGER
    + corner:REAL_32
    
    w := 100; h:=80
    xx := 100; yy := 400
    
    */
    
    save
    cs := (t*0.2).cos.abs + 0.1
    sn := (t*0.13).sin.abs
    transform(
      cs, sn,
      0.0,cs,
      0.0,0.0
    )
    
    save
    s := width.to_real_64/270.0
    transform(
      1.333333*s,0.0,
      0.0     ,-1.333333*s,
      1.0     ,height - 10
    )

    begin_path
    
    stroke_color (COLOR.rgb(35, 31, 32))
    line_cap  (butt)
    line_join (round)

    miter_limit  2.61313
    stroke_width 5.0
    
    move_to(98.6883,254.277)
    bezier_w1(143.083,193.760)w2(165.987,118.402)to(168.030, 41.7719)
    bezier_w1(155.250,66.6664)w2(141.456,90.5699)to(126.858, 111.731)
    bezier_w1(122.123,119.078)w2(119.686,118.052)to(109.425, 111.853)
    bezier_w1(75.8008, 89.341)w2(52.5004,58.2691)to(29.3172, 25.9234)
    bezier_w1(34.7055,104.713)w2(49.2313,192.909)to(98.6883, 254.277)

    p := PAINT.create_linear (29,25) to (168,254) 
    color (COLOR.rgbf(0.3*2,0.3*2,0.32*2)) to (COLOR.rgbf(0.15,0.15,0.16))
    stroke_paint p
    stroke
    p.free
    
    //pf := PAINT.create_linear (29,25) to (168,254) 
    //color (COLOR.rgb(35*2,31*2,32*2)) to (COLOR.rgb(15,15,16))
    pf := PAINT.create_radial (29.0+10.0+t.cos*20,175.0+(t*0.47).sin*50) 
    radius (10,100) color (COLOR.rgb(35*2,31*2,32*2)) to (COLOR.rgb(15,15,16))
    fill_paint pf
    fill
    pf.free
    

    begin_path
    stroke_width 5.0
    
    pf := PAINT.create_radial (29.0+10.0+t.cos*20,175.0+(t*0.47).sin*50) 
    radius (10,100) color (COLOR.rgbf(0.3+0.1,0.3,0.32)) to (COLOR.rgbf(0.0,0.0,0.0))
    fill_paint pf
    //fill_color (COLOR.rgbaf(0.3,0.3,0.32,0.9))
    move_to(98.3379, 233.091)
    line_to(106.239, 163.495)
    line_to(129.580, 157.890)
    line_to(108.142, 150.704)
    line_to(110.466, 134.116)
    line_to(97.8379, 149.220)
    line_to(85.9223, 133.967)
    line_to( 87.818, 150.720)
    line_to(66.7813, 157.889)
    line_to( 89.275, 163.488)
    line_to(98.3379, 233.091)
    
    p := PAINT.create_linear (66,133) to (130,234) 
    color (COLOR.rgbf(0.15,0.15,0.16)) to (COLOR.rgbf(0.3*2,0.3*2,0.32*2))
    stroke_paint p
    stroke
    fill
    p.free
    pf.free
    
    restore
