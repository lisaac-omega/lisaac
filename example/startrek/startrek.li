  - draw <-
  ( + t:REAL_32
        
    t := CLOCK.seconds
        
    draw_space (0,0) size (width,height) time t
    draw_logo  (0,0) size (width,height) time t
    /*
    intersect_scissor (400,400) size (50,50)
        
    begin_path
    fill_color (COLOR.white)
    rect (300,300) size (800,800)
    fill
    
    reset_scissor
    */    
    draw_title (0,0) size (width,height) time t
    draw_mouse
    PAPER.refresh_again
