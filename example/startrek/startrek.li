Header  
  + name := STARTREK;
  /*
  Try the 3 following recipes below.
  
  # (recipe #1) To compile as a standalone executable in a terminal window:
  lisaac startrek -boost  
  # then run with:
  ./startrek
  

  # (recipe #2) To compile an app for android:
  # Do not forget to plug your android device
  # Do not forget to turn on the developper mode on your android device
  # then compile using:
  lisaac startrek -boost -target android
  # then run the updated app on your android device. 
  
  (recipe #3) To compile in a web window:
  lisaac startrek -boost -target web
  # then run:
  ./run.sh
  */
  
Inherit 
  + parent_window:Expanded WINDOW
  
Public 
  
  - star (x,y:REAL_32) radius r:REAL_32 <-
  ( + l:INTEGER
    + p,p2:PAINT
    save
    l := (r * 8).to_integer.min 255 
    save
    begin_path
    circle (x,y) radius r
    p := PAINT.create_radial (x,y) 
              radius (1,r) 
              color (COLOR.rgba(255,255,255,l/2))
              to (COLOR.rgba(255,255,255,0))
    fill_paint p
    fill
    p.free
    restore
    
    save
    begin_path
    move_to (x-2.0*r,   y)
    line_to (x,         y-r/20.0)
    line_to (x+2.0*r,   y)
    line_to (x,         y+r/20.0)
    line_to (x-2.0*r,   y)
    
    move_to (x       ,y-2.0*r)
    line_to (x-r/20.0,y)
    line_to (x       ,y+2.0*r)
    line_to (x+r/20.0,y)
    line_to (x       ,y-2.0*r)
        
    p2 := PAINT.create_radial (x,y) 
    radius (1,2.0*r) color (COLOR.rgba(255,255,255,l)) to (COLOR.rgba(255,255,255,0))
    fill_paint p2
    fill
    p2.free
    restore
    
    save
    begin_path
    stroke_color (COLOR.rgba(255,128,128,l/4))
    circle (x,y) radius (1.2*r)
    stroke_width 1.0
    stroke
    restore
    
    restore
  )
  
  - star:ARRAY REAL_32
  - draw_space (px,py:REAL_32) size (w,h:REAL_32) time t:REAL_32 <-
  ( + p:PAINT
    + x,y,r,c,rr:REAL_32
    (star = NULL).if {
      star := ARRAY REAL_32.create_with_capacity (100*4)
      0.to 99 do { i:INTEGER
        star.add_last (w.to_integer.random_upper)
        star.add_last (h.to_integer.random_upper)
        star.add_last (16.random_upper.max 2)
        star.add_last (100.0/(1000.random_upper.max 50))
      }
    }
        
    save
    p := PAINT.create_box (px+50,py+50) size (w-100,h-100) radius 200
    feather 100 color (COLOR.rgba(14,23,56,255)) to (COLOR.rgba(0,0,0,0))
    //COLOR.rgb(14,23,56)
    begin_path
    rect (px,py) size (w,h)
    //rounded_rect (px+10,py+20) size (w-20,h-30) radius corner
    //path_winding (cst_hole)
    fill_paint p
    fill
    p.free
    
    restore
    
    0.to (star.upper) by 4 do { i:INTEGER
      x := star.at (i+0)
      y := star.at (i+1)
      r := star.at (i+2)
      c := star.at (i+3)
      rr := (r+(t*c).cos*5).max 1.0
      (rr = 1.0).if {
        star.at (i+0) put (w.to_integer.random_upper)
        star.at (i+1) put (h.to_integer.random_upper)
        star.at (i+2) put (16.random_upper.max 2)
        star.at (i+3) put (100.0/(1000.random_upper.max 50))
      } else {
        star.at (i+2) put ((r-0.005).max 0.0)
      }
      star (x,y) radius rr
    }
  )

