Header
  
  + name := NANO_TEST;
  
Inherit  
  + parent_window:Expanded WINDOW
  
Private
  /*
  - draw_mouse p:PEN <-
  ( + t:TOUCH
    (p.touch.lower).to (p.touch.upper) do { i:INTEGER
      t := p.touch.item i
      (t.z != 0).if {        
        p.begin_path
        p.circle (t.x,t.y) radius 100
        p.stroke_color (COLOR.rgb (255,255,255))
        p.stroke
      }
    }
  )*/
  
Public  
  
  - draw <-
  ( + t:REAL_32
    + c:PAINT
    + x,y,w,h:INTEGER
    
    t := CLOCK.seconds
    
    (x,y) := (512/2-32,860/2-32)
    (w,h) := (64,64)
    
    c := PAINT.create_radial (x+w/2,y+h/2) radius (3,(t*5).sin*32)
    color (COLOR.rgba(255,0,0,255)) 
    to (COLOR.rgba(72, 116, 80,0))
    
    begin_path
    rect (x,y) size (w,h)
    fill_paint c
    stroke_color (COLOR.rgba (0,0,0,0))
    fill
    c.free
    
    //draw_mouse
    PAPER.refresh_again
  )
  
  - main <-
  ( 
    init "Nano Test" size (512,860)
    PAPER.run
  )
  
